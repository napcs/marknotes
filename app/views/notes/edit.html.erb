<div class="row">
  <div class="col-md-12">

    <% if @note.slug.present? %>
      <% path = (url_for controller: "shared_notes", action: "show", id: @note.slug, only_path: false) %>
      <p>Note shared at <%= link_to path, path, {id: "share_url"} %></p>
      <%= link_to 'Unshare', unshare_note_path(@note), method: :patch, class: "btn btn-default" %>
    <% else %>
      <%= link_to 'Share', share_note_path(@note), method: :patch, class: "btn btn-default"  %>
    <% end %>
    <%= link_to 'Delete', note_path(@note), method: :delete, class: "btn btn-default" %>
  </div>

</div>

<%= render 'form' %>

